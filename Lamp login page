<script>
    function pullCord() {
        const wrapper = document.getElementById('wrapper');
        const lampContainer = document.querySelector('.lamp-container');

        // 1. "Pull" animation ka effect dena
        lampContainer.classList.add('pulling');
        
        setTimeout(() => {
            // 2. Cord wapas upar jayega
            lampContainer.classList.remove('pulling');
            
            // 3. Lamp jal jayega aur Form dikhega
            wrapper.classList.toggle('is-on');
            document.body.classList.toggle('is-on');
        }, 150);
    }
</script>

